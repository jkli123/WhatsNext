<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ItemListBackgroundImage">
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_width">@dimen/item_list_background_icon_width</item>
        <item name="android:layout_height">@dimen/item_list_background_icon_height</item>
    </style>

    <style name="ItemListBackgroundText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>
